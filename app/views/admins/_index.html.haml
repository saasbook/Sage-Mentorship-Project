%table
  %thead
    %tr
      %th Name
      %th Email
      %th School
      %th
      %th

  %tbody
    - @admins.each do |admin|
      %tr
        %td= link_to admin.name, admin
        %td= admin.email
        %td= admin.school.name
        %td= link_to 'Edit', edit_admin_path(admin)
        %td= link_to 'Destroy', admin, method: :delete, data: { confirm: "Are you sure you want to remove Admin #{admin.name} from the database?" }


%br

= link_to 'Create new admin', new_admin_path
