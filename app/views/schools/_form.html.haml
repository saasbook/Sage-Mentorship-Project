= form_for @school do |f|
  - if @school.errors.any?
    #error_explanation
      %h2= "#{pluralize(@school.errors.count, "error(s)")} prohibited this school from being saved:"
      %ul
        - @school.errors.full_messages.each do |message|
          %li= message
          %br

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save'
